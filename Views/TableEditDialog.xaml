<Window x:Class="DbDocManager.Views.TableEditDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="編輯表格" Height="300" Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 表格名稱 -->
        <Grid Grid.Row="0" Margin="0,0,0,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="80"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Label Grid.Column="0" Content="表格名稱:" VerticalAlignment="Center"/>
            <TextBox Grid.Column="1" x:Name="TableNameTextBox" 
                     Text="{Binding TableName, UpdateSourceTrigger=PropertyChanged}"
                     VerticalContentAlignment="Center" Height="25"/>
        </Grid>

        <!-- 描述標籤 -->
        <Label Grid.Row="1" Content="描述:" Margin="0,0,0,5"/>

        <!-- 描述輸入框 -->
        <TextBox Grid.Row="2" x:Name="DescriptionTextBox" 
                 Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}"
                 TextWrapping="Wrap" 
                 AcceptsReturn="True"
                 VerticalScrollBarVisibility="Auto"
                 Margin="0,0,0,15"/>

        <!-- 按鈕區域 -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="確定" Click="OkButton_Click" 
                    IsDefault="True" Margin="0,0,10,0" 
                    Padding="20,5" MinWidth="80"/>
            <Button Content="取消" Click="CancelButton_Click" 
                    IsCancel="True" Padding="20,5" MinWidth="80"/>
        </StackPanel>
    </Grid>
</Window>