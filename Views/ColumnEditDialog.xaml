<Window x:Class="DbDocManager.Views.ColumnEditDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="編輯欄位" Height="500" Width="600"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 表格名稱 (只顯示) -->
        <Grid Grid.Row="0" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="80"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Label Grid.Column="0" Content="所屬表格:" VerticalAlignment="Center"/>
            <TextBox Grid.Column="1" Text="{Binding TableName}" 
                     IsEnabled="False" VerticalContentAlignment="Center" Height="25"/>
        </Grid>

        <!-- 欄位名稱 -->
        <Grid Grid.Row="1" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="80"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Label Grid.Column="0" Content="欄位名稱:" VerticalAlignment="Center"/>
            <TextBox Grid.Column="1" x:Name="ColumnNameTextBox" 
                     Text="{Binding ColumnName, UpdateSourceTrigger=PropertyChanged}"
                     VerticalContentAlignment="Center" Height="25"/>
        </Grid>

        <!-- 資料型別和可空性 -->
        <Grid Grid.Row="2" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="80"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="100"/>
            </Grid.ColumnDefinitions>
            <Label Grid.Column="0" Content="資料型別:" VerticalAlignment="Center"/>
            <TextBox Grid.Column="1" Text="{Binding DataType, UpdateSourceTrigger=PropertyChanged}"
                     VerticalContentAlignment="Center" Height="25"/>
            <CheckBox Grid.Column="3" Content="允許 NULL" 
                      IsChecked="{Binding IsNullable}" VerticalAlignment="Center"/>
        </Grid>

        <!-- 單位和範例 -->
        <Grid Grid.Row="3" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="80"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="80"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Label Grid.Column="0" Content="單位:" VerticalAlignment="Center"/>
            <TextBox Grid.Column="1" Text="{Binding Unit, UpdateSourceTrigger=PropertyChanged}"
                     VerticalContentAlignment="Center" Height="25"/>
            <Label Grid.Column="3" Content="範例:" VerticalAlignment="Center"/>
            <TextBox Grid.Column="4" Text="{Binding Example, UpdateSourceTrigger=PropertyChanged}"
                     VerticalContentAlignment="Center" Height="25"/>
        </Grid>

        <!-- 描述標籤 -->
        <Label Grid.Row="4" Content="描述:" Margin="0,0,0,5"/>

        <!-- 描述輸入框 -->
        <TextBox Grid.Row="5" Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}"
                 TextWrapping="Wrap" AcceptsReturn="True"
                 VerticalScrollBarVisibility="Auto"
                 Height="80" Margin="0,0,0,10"/>

        <!-- 限制說明標籤 -->
        <Label Grid.Row="6" Content="限制說明:" Margin="0,0,0,5"/>

        <!-- 限制說明輸入框 -->
        <TextBox Grid.Row="7" Text="{Binding ConstraintsNote, UpdateSourceTrigger=PropertyChanged}"
                 TextWrapping="Wrap" AcceptsReturn="True"
                 VerticalScrollBarVisibility="Auto" Margin="0,0,0,15"/>

        <!-- 按鈕區域 -->
        <StackPanel Grid.Row="8" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="確定" Click="OkButton_Click" 
                    IsDefault="True" Margin="0,0,10,0" 
                    Padding="20,5" MinWidth="80"/>
            <Button Content="取消" Click="CancelButton_Click" 
                    IsCancel="True" Padding="20,5" MinWidth="80"/>
        </StackPanel>
    </Grid>
</Window>